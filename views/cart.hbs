<div class="row">
  <div class="col">
    <form method="POST" action="/">
      <div class="form-group">
        <label for="item">Item</label>
        {{!-- EMMET: input:type#id.class --}}
        <input type="text" name="item" id="item" class="form-control" placeholder="Please input an item">
      </div>
      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" id="quantity" class="form-control" min="1"
          placeholder="Please enter the quantity">
      </div>
      <div class="form-group">
        <label for="unitPrice">Unit Price</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input type="text" name="unitPrice" id="unitPrice" class="form-control form-control-lg"
            placeholder="Cost per unit item">
        </div>
      </div>
      {{!-- <div class="d-flex justify-content-end mb-3"> --}}
      <div class="mt-4 mb-3">
        <button type="submit" class="btn btn-sm btn-success btn-block">
          Add to Cart
        </button>
      </div>
      {{!-- value will be state of cart now --}}
      <input type="hidden" name="cartState" value="{{ cartState }}">
    </form>
  </div>

  <div class="col">
    <h3>Items added</h3>
    {{!-- EMMET: table>th>tr>td*3 --}}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Item</th>
          <th>Quantity</th>
          <th>Unit Price</th>
        </tr>
      </thead>

      {{!-- EMMET: tbody>tr>td*3 --}}
      <tbody>
        {{#each cart}}
        <tr>
          <td>{{ this.item }}</td>
          <td>{{ this.quantity }}</td>
          <td>{{ this.unitPrice }}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

